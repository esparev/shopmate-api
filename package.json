{
  "name": "shopmate-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/api/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/api/index.js\"",
    "lint": "eslint",
    "migrations:generate": "sequelize-cli migration:generate --name",
    "migrations:run": "sequelize-cli db:migrate",
    "migrations:revert": "sequelize-cli db:migrate:undo",
    "migrations:delete": "sequelize-cli db:migrate:undo:all",
    "seed:generate": "sequelize-cli seed:generate --name",
    "seed:all": "sequelize-cli db:seed:all",
    "seed:revert": "sequelize-cli db:seed:undo",
    "seed:delete": "sequelize-cli db:seed:undo:all"
  },
  "author": "JoseMa Esparev <jm.esparev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.2",
    "apollo-server-express": "^3.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.9.0",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.30.0",
    "sequelize-cli": "^6.6.0",
    "swagger-ui-express": "^4.6.2",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.7"
  }
}
